<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>INSSlab_Fibre</defName>
    <label>Insulation slab (fibres)</label>
    <description>Insulation material formed into a workable slab. Can be recycled to burlap.</description>
    <graphicData>
      <texPath>Things/Item/INSSlab_Fibre</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <stackLimit>50</stackLimit>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>7.5</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>1.1</Flammability>
      <DeteriorationRate>1.5</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>INS_Insulation</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <techLevel>Medieval</techLevel>
  </ThingDef>
  <RecipeDef>
    <defName>Make_INSSlab_Fibre</defName>
    <label>Make Insulation slabs (fibres)</label>
    <description>Make 5 Insulation slabs (fibres).</description>
    <workAmount>250</workAmount>
    <jobString>Making insulation slabs.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
    <fixedIngredientFilter>
      <categories>
        <li>Textiles</li>
        <li>Leathers</li>
      </categories>
      <disallowedThingDefs>
        <li>Hyperweave</li>
        <li>Leather_Thrumbo</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>InsulationFibres</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Textiles</li>
            <li>Leathers</li>
          </categories>
          <disallowedThingDefs>
            <li>Hyperweave</li>
            <li>Leather_Thrumbo</li>
          </disallowedThingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <products>
      <INSSlab_Fibre>5</INSSlab_Fibre>
    </products>
    <skillRequirements>
      <Crafting>2</Crafting>
    </skillRequirements>
  </RecipeDef>
