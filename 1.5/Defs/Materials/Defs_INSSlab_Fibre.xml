    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>InsulationFibres</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Textiles</li>
            <li>Leathers</li>
          </categories>
          <disallowedThingDefs>
            <li>Hyperweave</li>
            <li>Leather_Thrumbo</li>
          </disallowedThingDefs>
        </filter>
        <count>125</count>
      </li>
    </ingredients>
    <products>
      <INSSlab_Fibre>25</INSSlab_Fibre>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
  </RecipeDef>
  <ThingDef ParentName="ResourceBase">
    <defName>INS_Burlap</defName>
    <label>Burlap</label>
    <description>Crude fabric woven from insulation fibers. Similar to cloth but with better insulating properties.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Cloth</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(80,50,30)</color>
    </graphicData>
    <statBases>
      <StuffPower_Armor_Sharp>0.34</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.20</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>23</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>23</StuffPower_Insulation_Heat>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>1.5</MarketValue>
      <Mass>0.026</Mass>
      <Flammability>1.2</Flammability>
      <DeteriorationRate>4.5</DeteriorationRate>
    </statBases>
    <stuffProps>
      <statFactors>
        <Flammability>1.2</Flammability>
      </statFactors>
      <categories>
        <li>Fabric</li>
      </categories>
      <color>(80,50,30)</color>
      <commonality>0.3</commonality>
      <allowColorGenerators>true</allowColorGenerators>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <colorGeneratorInTraderStock Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>5</weight>
          <only>(0.31,0.2,0.12,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <min>(0.31,0.2,0.12,1)</min>
          <max>(0.41,0.25,0.15,1)</max>
        </li>
        <li>
          <weight>5</weight>
          <only>(0.62,0.4,0.24,1)</only>
        </li>
      </options>
    </colorGeneratorInTraderStock>
    <burnableByRecipe>true</burnableByRecipe>
  </ThingDef>
  <RecipeDef>
    <defName>Recycle_INSSlab_Fibre</defName>
    <label>Recycle Insulation slabs (fibres)</label>
    <description>Recycle 5 Insulation slabs (fibres).</description>
    <workAmount>500</workAmount>
    <jobString>Recycling insulation slabs.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
