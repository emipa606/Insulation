      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>InsulationFibres</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>INSSlab_Fibre</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
