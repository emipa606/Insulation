    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>25</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <researchPrerequisite>InsulationPolymers</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
    <products>
      <INSSlab_Polymer>25</INSSlab_Polymer>
    </products>
    <skillRequirements>
      <Intellectual>5</Intellectual>
    </skillRequirements>
  </RecipeDef>
  <RecipeDef>
    <defName>Recycle_INSSlab_Polymer</defName>
    <label>Recycle Insulation slabs (polymers)</label>
    <description>Recycling 25 Insulation slabs (polymers).</description>
    <workAmount>1250</workAmount>
    <jobString>Recycling insulation slabs.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
