<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Apothecary (Continued)</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Make_INSSlab_Biomass"]/ingredients/li[1]/filter/thingDefs</xpath>
          <value>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYYarrowMaterial</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Make_INSSlab_Biomass"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYYarrowMaterial</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeBulk_INSSlab_Biomass"]/ingredients/li[1]/filter/thingDefs</xpath>
          <value>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYYarrowMaterial</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeBulk_INSSlab_Biomass"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYYarrowMaterial</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
